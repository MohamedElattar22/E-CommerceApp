<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
        <data>
                <import type="android.view.View">

                </import>
                <variable
                    name="homeFragment"
                    type="com.example.e_commerceapp.homescreen.HomeFragment" />
                <variable
                    name="vm"
                    type="com.example.e_commerceapp.homescreen.HomeFragmentViewModel" />

        </data>

        <androidx.constraintlayout.widget.ConstraintLayout


            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/homeSHIMMER"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="match_parent"
                                    android:layout_height="220dp"
                                    android:layout_margin="20dp"

                                    app:strokeWidth="0dp"
                                    android:backgroundTint="#4D4E7AA8"
                                    app:cardCornerRadius="20dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                </com.google.android.material.card.MaterialCardView>

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="match_parent"
                                    android:layout_height="18dp"
                                    android:layout_margin="20dp"
                                    app:strokeWidth="0dp"
                                    android:backgroundTint="#4D4E7AA8"
                                    app:cardCornerRadius="20dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                </com.google.android.material.card.MaterialCardView>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="20dp"
                                    android:orientation="horizontal">

                                        <com.google.android.material.card.MaterialCardView
                                            android:layout_width="90dp"
                                            app:cardCornerRadius="120dp"
                                            android:layout_margin="5dp"
                                            android:backgroundTint="#4D4E7AA8"
                                            app:strokeWidth="0dp"
                                            android:layout_height="90dp">

                                        </com.google.android.material.card.MaterialCardView>

                                        <com.google.android.material.card.MaterialCardView
                                            android:layout_width="90dp"
                                            app:cardCornerRadius="120dp"
                                            android:layout_margin="5dp"
                                            android:backgroundTint="#4D4E7AA8"
                                            app:strokeWidth="0dp"
                                            android:layout_height="90dp">

                                        </com.google.android.material.card.MaterialCardView>

                                        <com.google.android.material.card.MaterialCardView
                                            android:layout_width="90dp"
                                            app:cardCornerRadius="120dp"
                                            android:layout_margin="5dp"
                                            android:backgroundTint="#4D4E7AA8"
                                            app:strokeWidth="0dp"
                                            android:layout_height="90dp">

                                        </com.google.android.material.card.MaterialCardView>

                                        <com.google.android.material.card.MaterialCardView
                                            android:layout_width="90dp"
                                            app:cardCornerRadius="120dp"
                                            android:layout_margin="5dp"
                                            android:backgroundTint="#4D4E7AA8"
                                            app:strokeWidth="0dp"
                                            android:layout_height="90dp">

                                        </com.google.android.material.card.MaterialCardView>

                                </LinearLayout>

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="match_parent"
                                    android:layout_height="18dp"
                                    android:layout_margin="20dp"
                                    app:strokeWidth="0dp"
                                    android:backgroundTint="#4D4E7AA8"
                                    app:cardCornerRadius="20dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                </com.google.android.material.card.MaterialCardView>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">

                                        <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            android:layout_margin="20dp"
                                            android:backgroundTint="#4D4E7AA8"
                                            app:strokeWidth="0dp"
                                            android:layout_width="158dp"
                                            android:layout_height="211dp">


                                        </com.google.android.material.card.MaterialCardView>

                                        <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            android:layout_margin="20dp"
                                            android:backgroundTint="#4D4E7AA8"
                                            app:strokeWidth="0dp"
                                            android:layout_width="158dp"
                                            android:layout_height="211dp">


                                        </com.google.android.material.card.MaterialCardView>


                                </LinearLayout>
                        </LinearLayout>

                </com.facebook.shimmer.ShimmerFrameLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:id="@+id/homecontent"

                    android:layout_height="match_parent">

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/viewPager"
                            android:layout_width="match_parent"
                            android:layout_height="220dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                        </androidx.viewpager2.widget.ViewPager2>

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bold"
                            android:text="Categories"
                            android:layout_margin="20dp"
                            android:textColor="@color/DarkBlue"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/viewPager">

                        </TextView>

                        <TextView
                            android:id="@+id/viewALLtv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View all"
                            android:textSize="12sp"
                            android:onClick="@{()->homeFragment.navigateToAllCategories()}"
                            android:layout_margin="20dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/DarkBlue"
                            android:fontFamily="@font/regular"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/viewPager">

                        </TextView>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/CategoriesRV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="20dp"
                            android:adapter="@{vm.catAdapter}"
                            android:layout_marginEnd="20dp"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/categoryitem"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView">

                        </androidx.recyclerview.widget.RecyclerView>

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bold"
                            android:text="Home Appliance"
                            android:layout_margin="20dp"
                            android:textColor="@color/DarkBlue"
                            android:textSize="18sp"

                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/CategoriesRV">

                        </TextView>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/HomeApplRV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/home_appliance_item"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView1">

                        </androidx.recyclerview.widget.RecyclerView>
                </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>